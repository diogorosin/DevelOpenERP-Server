<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
	        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
	    <property name="connection.driver_class">org.postgresql.Driver</property>
	    <property name="connection.url">jdbc:postgresql://localhost:5432/pocketpos</property>
	    <property name="connection.username">postgres</property>
	    <property name="connection.password">dbr1987diogo</property>
	    <property name="connection.pool_size">1</property>
	    <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
	    <property name="current_session_context_class">thread</property>
	    <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
	    <property name="show_sql">false</property>	        
	    <property name="hbm2ddl.auto">validate</property>
	 	<mapping class="br.com.pocketpos.server.orm.Idiom"/>
	 	<mapping class="br.com.pocketpos.server.orm.Access"/>
	 	<mapping class="br.com.pocketpos.server.orm.Address"/>
	 	<mapping class="br.com.pocketpos.server.orm.City"/>
	 	<mapping class="br.com.pocketpos.server.orm.Country"/>
	 	<mapping class="br.com.pocketpos.server.orm.State"/>
	 	<mapping class="br.com.pocketpos.server.orm.Subject"/>
	 	<mapping class="br.com.pocketpos.server.orm.SubjectSubject"/>
	 	<mapping class="br.com.pocketpos.server.orm.SubjectSubjectAccess"/>
	 	<mapping class="br.com.pocketpos.server.orm.Person"/>
	 	<mapping class="br.com.pocketpos.server.orm.Company"/>
	 	<mapping class="br.com.pocketpos.server.orm.SystemPerson"/>
	 	<mapping class="br.com.pocketpos.server.orm.SystemCompany"/>
	 	<mapping class="br.com.pocketpos.server.orm.SystemToken"/>	 	
    </session-factory>
</hibernate-configuration>